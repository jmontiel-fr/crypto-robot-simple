# =============================================================================
# CRYPTO TRADING ROBOT - ENVIRONMENT TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit your actual .env file with real API keys!

# =============================================================================
# BINANCE API CONFIGURATION (REQUIRED)
# =============================================================================
# Get your API keys from https://www.binance.com/en/my/settings/api-management
# SECURITY: Replace with your actual API keys and keep them secure!

BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database type: 'sqlite' (recommended for local) or 'postgresql'
DATABASE_TYPE=sqlite

# SQLite Configuration (used when DATABASE_TYPE=sqlite)
# Database configuration for direct Python deployment
# DATABASE_PATH: Directory where database file will be stored
# DATABASE_FILE: Name of the SQLite database file
DATABASE_PATH=/opt/crypto-robot/database
DATABASE_FILE=cryptorobot.db

# Legacy SQLite configuration (for backward compatibility)
# SQLITE_FILE: Full path to database file (legacy format)
SQLITE_FILE=/opt/crypto-robot/database/cryptorobot.db

# Database Configuration Examples:
# For local development: DATABASE_PATH=./database
# For direct Python deployment: DATABASE_PATH=/opt/crypto-robot/database

# PostgreSQL Configuration (used when DATABASE_TYPE=postgresql)
# Uncomment and configure if using PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/cryptorobot_db
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=cryptorobot_db
# DB_USER=postgres
# DB_PASSWORD=your_db_password

# =============================================================================
# DAILY REBALANCE STRATEGY CONFIGURATION
# =============================================================================
# Single strategy: Daily rebalancing of volatile cryptocurrencies
# Proven high-performance approach with 24-hour rebalancing cycles

# Robot Configuration
MIN_BALANCE_REQUIRED=10.0
MIN_RESERVE_LIMIT=2.0
TRADING_FEE=0.001
PORTFOLIO_SIZE=15
ALLOCATION_PERCENTAGE=1.0

# Daily Rebalance Strategy Settings
STRATEGY_NAME=daily_rebalance
CYCLE_DURATION=1440
REBALANCE_FREQUENCY=daily
TARGET_COINS_COUNT=15

# Trading Optimization
USE_DIRECT_SWAPS=true
SWAP_FEE=0.001

# =============================================================================
# SIMULATION CALIBRATION CONFIGURATION
# =============================================================================
# Calibration profiles ensure realistic simulation performance

# Default Calibration Profile
# Available: truly_realistic_baseline, live_robot_performance
DEFAULT_CALIBRATION_PROFILE=live_robot_performance

# Calibration Settings
ENABLE_CALIBRATION=true
CALIBRATION_PROFILES_DIR=calibration_profiles

# =============================================================================
# WEB INTERFACE CONFIGURATION
# =============================================================================
# Flask Configuration
FLASK_DEBUG=true
FLASK_SECRET_KEY=change-this-secret-key-in-production
FLASK_PORT=5000
FLASK_HOST=0.0.0.0

# Domain Configuration (change for deployment)
DOMAIN_NAME=crypto-robot.local
HOSTNAME=crypto-robot.local
USE_HTTPS=false

# SSL Configuration (Direct File System Paths)
SSL_CERT_PATH=/opt/crypto-robot/certificates/crypto-robot.local/cert.pem
SSL_KEY_PATH=/opt/crypto-robot/certificates/crypto-robot.local/key.pem

# SSL Certificate Content (for environment variable injection)
# These will be populated by the certificate configuration script
SSL_CERT_CONTENT=""
SSL_KEY_CONTENT=""

# Environment Configuration
FLASK_ENV=development
RESERVE_ASSET=BNB
ROBOT_STATUS=frozen

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Daily Rebalance Strategy Parameters
STARTING_CAPITAL=100
ROBOT_DRY_RUN=true

# Rebalancing Timing (UTC)
REBALANCE_HOUR_UTC=0
REBALANCE_MINUTE_UTC=0

# Dynamic Crypto Selection
ENABLE_DYNAMIC_CRYPTO_SELECTION=true
CRYPTO_SELECTION_LOOKBACK_DAYS=30
MIN_VOLUME_USD=10000000
MAX_CRYPTO_COUNT=10

# =============================================================================
# VOLATILITY-BASED SELECTION OPTIMIZATION
# =============================================================================
# Advanced volatility modes for different market conditions

# Volatility Selection Mode
VOLATILITY_SELECTION_MODE=average_volatility
VOLATILITY_ANALYSIS_DAYS=14
MARKET_REGIME_ADAPTIVE=true

# Volatility Thresholds (daily volatility %)
LOW_VOLATILITY_MAX=3.0
AVERAGE_VOLATILITY_MIN=3.0
AVERAGE_VOLATILITY_MAX=8.0
HIGH_VOLATILITY_MIN=8.0

# Performance Optimization Weights
VOLUME_WEIGHT=0.25
VOLATILITY_WEIGHT=0.25
MOMENTUM_WEIGHT=0.25
STABILITY_WEIGHT=0.15
SHARPE_WEIGHT=0.10

# Market Regime Detection Parameters
MARKET_FEAR_THRESHOLD_LOW=25
MARKET_FEAR_THRESHOLD_HIGH=75
MOMENTUM_BULL_THRESHOLD=0.05
MOMENTUM_BEAR_THRESHOLD=-0.05

# Volatility Mode Performance Targets
LOW_VOL_MODE_TARGET_RETURN=0.08
AVERAGE_VOL_MODE_TARGET_RETURN=0.15
HIGH_VOL_MODE_TARGET_RETURN=0.25

# Risk Management by Volatility Mode
LOW_VOL_MAX_DRAWDOWN=0.10
AVERAGE_VOL_MAX_DRAWDOWN=0.20
HIGH_VOL_MAX_DRAWDOWN=0.35

# Static Crypto List (used when ENABLE_DYNAMIC_CRYPTO_SELECTION=false)
STATIC_CRYPTO_LIST=ADAUSDT,DOTUSDT,AVAXUSDT,MATICUSDT,ATOMUSDT,SOLUSDT,NEARUSDT,ALGOUSDT,BTCUSDT,ETHUSDT

# Database Configuration
ENABLE_WAL_MODE=true
ENABLE_TRANSACTIONS=true

# =============================================================================
# STRATEGY CONFIGURATION
# =============================================================================
# Single strategy mode - Daily Rebalance only
TRADING_STRATEGY=daily_rebalance
STRATEGY_ENABLED=true
SINGLE_STRATEGY_MODE=true

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env: cp .env.template .env
# 2. Get Binance API keys from: https://www.binance.com/en/my/settings/api-management
# 3. Replace BINANCE_API_KEY and BINANCE_SECRET_KEY with your actual keys
# 4. Adjust other settings as needed for your setup
# 5. NEVER commit your .env file - it's already in .gitignore
#
# SECURITY REMINDER:
# - Keep your API keys secure and never share them
# - Use testnet keys for testing
# - Set ROBOT_DRY_RUN=true for testing without real trades